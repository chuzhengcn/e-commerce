doctype html
html(ng-app="login") 
    head
        include ./includes/head
    body
        include ./includes/alert
        .container
            .row
                .col-md-5.col-md-offset-1
                    #login-alt-container
                        // Title
                        h1.push-top-bottom
                            i.gi.gi-flash
                            strong 微信商城管理系统
                            br
                            small WeChat E－Commerce Management
                        // END Title
                        // Key Features
                        ul.fa-ul.text-muted
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  干净 &amp; 现代的产品模版设计
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  手机、平板、PC全终端支持 &amp; Retina 优化
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  高质量技术实现，无需聘请专业技术人员 
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  可视化分析销售数据
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  简单、美观、方便的后台管理
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  领先的微信客服解决方案
                            li
                                i.fa.fa-check.fa-li.text-success
                                |  .. 还有更多激动人心的功能！
                        // END Key Features
                        // Footer
                        footer.text-muted.push-top-bottom
                            small
                                span#year-copy
                                |  &copy; 
                                a(href="http://ec.feiyesoft.com", target="_blank") FeiYe EC 1.0
                        // END Footer
                .col-md-5
                    // Login Container
                    #login-container(ng-controller="login_container_controller")
                        // Login Title
                        .login-title.text-center
                            h1
                                strong(ng-bind="title")
                        // END Login Title
                        // Login Block
                        .block.push-bit
                            // Login Form
                            form#form-login.form-horizontal(name="form_login", ng-controller="login_controller", 
                                ng-submit="form_login.$valid && login()")
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-envelope
                                            input#login-email.form-control.input-lg(type="email", ng-model="user.email", 
                                                name="login-email", placeholder="邮箱", required)
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-asterisk
                                            input#login-password.form-control.input-lg(type="password", ng-model="user.password", 
                                                name="login-password", placeholder="密码", ng-maxlength="20", ng-minlength="6", required)
                                .form-group.form-actions
                                    .col-xs-4
                                        //- label.switch.switch-primary(data-toggle="tooltip", title="下次自动登录?")
                                        //-     input#login-remember-me(type="checkbox", ng-model="user.remember_me", name="login-remember-me", checked="")
                                        //-     span
                                    .col-xs-8.text-right
                                        button.btn.btn-sm.btn-primary(type="submit")
                                            i.fa.fa-angle-right
                                            |  登录到控制台
                                .form-group
                                    .col-xs-12.text-center
                                        a#link-reminder-login(href="javascript:void(0)", ng-click="switch_title('找回密码')")
                                            small 忘记密码?
                                        |  - 
                                        a#link-register-login(href="javascript:void(0)", ng-click="switch_title('注册账号')")
                                            small 创建一个新账号
                            // END Login Form
                            // Reminder Form
                            form#form-reminder.form-horizontal.display-none(ng-controller="reminder_controller",name="form_reminder", 
                                ng-submit="form_reminder.$valid && reset_password()")
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-envelope
                                            input#reminder-email.form-control.input-lg(type="email", name="reminder-email", 
                                                placeholder="邮箱", ng-model="email" required)
                                .form-group.form-actions
                                    .col-xs-12.text-right
                                        button.btn.btn-sm.btn-primary(type="submit")
                                            i.fa.fa-angle-right
                                            |  重置密码
                                .form-group
                                    .col-xs-12.text-center
                                        small 记起来你的密码了吗？
                                        a#link-reminder(href="javascript:void(0)", ng-click="switch_title('登录')")
                                            small 登录
                            // END Reminder Form
                            // Register Form
                            form#form-register.form-horizontal.display-none(ng-controller="form_register_controller", name="form_register",
                                ng-submit="form_register.$valid && reg()")
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-envelope
                                            input#register-email.form-control.input-lg(type="email", ng-model="user.email", name="register-email", placeholder="邮箱", required)
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-asterisk
                                            input#register-password.form-control.input-lg(type="password", ng-model="user.password", 
                                                ng-minlength="6", ng-maxlength="20", name="register-password", placeholder="密码")
                                .form-group
                                    .col-xs-12
                                        .input-group
                                            span.input-group-addon
                                                i.gi.gi-asterisk
                                            input#register-password-verify.form-control.input-lg(type="password", ng-model="user.password_verify",
                                                ng-minlength="6", ng-maxlength="20", name="register-password-verify", placeholder="重复一次密码")
                                .form-group.form-actions
                                    .col-xs-6
                                        a.register-terms(href="#modal-terms", data-toggle="modal") 服务条款
                                        label.switch.switch-primary(data-toggle="tooltip", title="同意服务条款")
                                            input#register-terms(type="checkbox", name="register-terms", ng-model="user.agree_terms", required)
                                            span
                                    .col-xs-6.text-right
                                        button.btn.btn-sm.btn-success(type="submit", ng-disabled="!form_register.$valid")
                                            i.fa.fa-plus
                                            |  注册账号
                                .form-group
                                    .col-xs-12.text-center
                                        small 已经有账号了? 
                                        a#link-register(href="javascript:void(0)", ng-click="switch_title('登录')")
                                            small 登录
                            // END Register Form
                        // END Login Block
                    // END Login Container
        // END Login Alternative Row
        // Modal Terms
        #modal-terms.modal(tabindex="-1", role="dialog", aria-hidden="true")
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
